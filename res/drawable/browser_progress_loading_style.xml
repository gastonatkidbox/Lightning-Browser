<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <corners android:radius="50dp" />

            <stroke
                android:width="4dp"
                android:color="#ffffff" />

            <gradient
                android:angle="270"
                android:centerColor="#d4e966"
                android:centerX="29%"
                android:endColor="#d4e966"
                android:startColor="#c5e232"
                android:type="sweep" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="50dp" />

                <stroke
                    android:width="4dp"
                    android:color="#ffffff" />

                <gradient
                    android:angle="270"
                    android:centerColor="#d4e966"
                    android:centerX="0%"
                    android:endColor="#98d86a"
                    android:startColor="#75ca39"
                    android:type="sweep" />
            </shape>
        </clip>
    </item>

</layer-list>